# This file should be copied to .config/milkwm/milkwmrc

Window: {
	TitleBar: {
		Buttons: {
			# Ordered from left to right
			Left = [
				"Close"
			];

			# Ordered from right to left
			Right = [
				"Maximize",
				"Iconify"
			];
		};
		Background: {
			# Just don't write anything if you want default background
			#Inactive: "white";
			Active: "blue";
		};
		Foreground: {
			# Just don't write anything if you want default background
			#Inactive: "black";
			Active: "white";
		};

		# Left, Right, or Center
		# Default is Center
		Align = "Left";
	};
};
